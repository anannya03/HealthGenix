<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:verticalScrollbarPosition="right"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="79dp"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

    <EditText
        android:id="@+id/editTextName"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="270dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:fadingEdge="horizontal|vertical"
        android:hint="Name"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:visibility="visible"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2" />

    <EditText
        android:id="@+id/editTextAge"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="270dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:fadingEdge="horizontal|vertical"
        android:hint="Age"

        android:padding="10dp"
        android:visibility="visible"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextName" />


    <EditText
        android:id="@+id/editTextGender"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="270dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:fadingEdge="horizontal|vertical"
        android:hint="Gender"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextAge" />

    <EditText
        android:id="@+id/editTextHeight"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="270dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:fadingEdge="horizontal|vertical"
        android:hint="Height in cm"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextGender" />

    <EditText
        android:id="@+id/editTextWeight"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_marginStart="84dp"

        android:layout_marginTop="24dp"
        android:layout_marginEnd="270dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:fadingEdge="horizontal|vertical"
        android:hint="Weight in kg"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:visibility="visible"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextHeight" />

    <EditText
        android:id="@+id/editTextBMI"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="270dp"
        android:background="@drawable/textbox"
        android:editable="false"
        android:ems="10"
        android:fadingEdge="horizontal|vertical"
        android:hint="BMI"
        android:inputType=""
        android:padding="10dp"
        android:visibility="visible"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextWeight" />

    <EditText
        android:id="@+id/editTextGoal"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="270dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:fadingEdge="horizontal|vertical"
        android:hint="Goal"
        android:inputType=""
        android:padding="10dp"
        android:visibility="visible"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextBMI" />

    <EditText
        android:id="@+id/editTextGoalWeight"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="270dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:fadingEdge="horizontal|vertical"
        android:hint="Goal Weight"
        android:inputType=""
        android:padding="10dp"
        android:visibility="visible"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextGoal" />

    <Button
        android:id="@+id/submitProfile"
        android:layout_width="363dp"
        android:layout_height="43dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textbox"
        android:backgroundTint="#000000"
        android:text="SUBMIT"
        app:layout_constraintTop_toBottomOf="@id/editTextGoalWeight"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="56dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>